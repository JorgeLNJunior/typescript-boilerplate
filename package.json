{
  "name": "typescript-boilerplate",
  "version": "0.1.0",
  "description": "a complete typescript boilerplate",
  "main": "dist/src/main.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "postinstall": "npm list -g pm2@latest || npm install pm2@latest -g",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "ts-node src/main.ts",
    "start:dev": "tsnd --respawn --transpile-only src/main.ts",
    "start:prod": "pm2-runtime start ecosystem.config.js --env production",
    "test": "jest",
    "test:cov": "jest --coverage",
    "prepare": "husky install",
    "release": "release-it --ci"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/JorgeLNJunior/typescript-boilerplate.git"
  },
  "author": "JorgeLNJunior",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JorgeLNJunior/typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/JorgeLNJunior/typescript-boilerplate#readme",
  "dependencies": {
    "@ptkdev/logger": "^1.8.0",
    "dotenv": "^16.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.2",
    "prettier": "2.6.2",
    "release-it": "^15.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.2"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix"
  }
}
